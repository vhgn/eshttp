# Desktop web deployment origin (no trailing slash)
APP_ORIGIN=https://your-desktop-app.vercel.app

# Neon connection string
DATABASE_URL=postgresql://user:password@your-neon-host/neondb?sslmode=require

# GitHub OAuth App credentials
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=https://your-desktop-app.vercel.app/api/auth/github/callback

# 32-byte random key encoded as base64url
# Example generation: `openssl rand -base64 32 | tr '+/' '-_' | tr -d '='`
SESSION_ENCRYPTION_KEY=replace_with_base64url_32_byte_key

# Optional overrides
# SESSION_COOKIE_NAME=eshttp_github_session
# SESSION_TTL_SECONDS=2592000
# OAUTH_STATE_TTL_SECONDS=600
# GITHUB_REPO_SCAN_LIMIT=20
